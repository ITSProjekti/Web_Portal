@model List<string>
@{
    ViewBag.Title = "Downloads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Preuzimanje materijala</h2>


<table>
    <tr>
        <th>Naziv fajla</th>
        <th>Link</th>
    </tr>
    @for (var i = 0; i <= Model.Count - 1; i++)
    {
        <tr>
            <td>
                @Model[i].ToString()
            </td>
            <td>
                @Html.ActionLink("Preuzmite","Download", "Download", new { ImageName = @Model[i].ToString() })
            </td>
        </tr>
    }
</table>
